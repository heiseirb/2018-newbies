<h2>Log in</h2>

<%= form_for(@user, url: user_session_path(@user)) do |f| %>

  <%= render 'users/devise_errors' %>

  <div class="field control">
    <%= f.label :email %><br />
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <div class="has-text-right">
      <%= f.submit "Log in", class: 'button is-primary' %>
    </div>
  </div>
<% end %>
